<style>
  .additional-info {
    --maxWidth: 500px;
    position: relative;
    overflow: hidden;
    background-color: #f3d5c0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: stretch;
    padding: 30px 50px;
    gap: 10px;

    @media (width < 790px) {
      --maxWidth: 100%;
    }

    .additional-image {
      width: var(--maxWidth);
      max-width: 100%;
      border: 1px solid gray;
      aspect-ratio: 3 / 2;
      z-index: 2;
    }

    .rules {
      width: var(--maxWidth);
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      font-size: 28px;
      gap: 10px;

      @media (width < 790px) {
        font-size: 18px;
      }
    }

    .icon-container {
      display: flex;
      flex-direction: row;
      align-items: center;
      /* justify-content: center; */
      gap: 10px;

      .icon {
        width: 30px;
        height: 30px;
      }
    }

    .presence {
      width: var(--maxWidth);
      font-size: 20px;
      font-weight: normal;
      text-align: center;

      @media (width < 790px) {
        font-size: 14px;
      }
    }

    .gift {
      width: var(--maxWidth);
      font-size: 28px;
      font-weight: bold;

      @media (width < 790px) {
        font-size: 14px;
      }
    }

    .only-adults {
      font-size: 28px;
      font-weight: bold;

      @media (width < 790px) {
        font-size: 16px;
      }
    }

    .gift-link {
      text-decoration: underline;
      color: inherit;
    }

    .flowers {
      position: absolute;
      bottom: 92px;
      right: -146px;
      width: 300px;
      height: auto;
      rotate: 90deg;
      z-index: 1;
    }
  }
</style>